    "firebase",
    "firestore"
  ],
  "main": "lib/index.js",
  "react-native": "lib/index.react-native.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "typings": "./index.d.ts",
  "unpkg": "dist/altair-redux.min.js",
  "dependencies": {
