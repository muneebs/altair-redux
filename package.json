  },
  "peerDependencies": {
    "algoliasearch": "^3.24.5",
    "firebase": "^4.6.0",
    "geofire": "^4.1.2",
    "react": "16.0.0-alpha.12",
    "react-redux-firebase": "next",
    "redux": "3.7.2",
    "redux-action-buffer": "1.1.0",
    "redux-firestore": "latest",
    "redux-logger": "3.0.6",
    "redux-persist": "^4.10.1",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "algoliasearch": "^3.24.5",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-es6-promise": "^1.1.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "child-process-promise": "^2.2.1",
    "codecov": "^2.1.0",
    "cross-env": "^5.1.1",
    "docdown": "^0.7.2",
    "documentation": "^4.0.0-beta15",
    "documentation-markdown-api-theme": "^1.0.2",
    "esdoc": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "firebase": "^4.6.0",
    "firebase-server": "^0.10.1",
    "geofire": "^4.1.2",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "jsdoc-babel": "^0.3.0",
    "jsdom": "^11.3.0",
    "lint-staged": "^4.3.0",
    "mocha": "^3.2.0",
    "prettier": "^1.7.4",
    "react": "16.0.0-alpha.12",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-native-firebase": "^3.0.5",
    "react-redux-firebase": "next",
    "redux": "^3.7.2",
    "redux-action-buffer": "^1.1.0",
    "redux-firestore": "latest",
    "redux-logger": "^3.0.6",
    "redux-persist": "^4.10.1",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.0.2",
    "sinon-chai": "^2.14.0",
    "superagent": "^3.8.0",
    "webpack": "^3.5.5",
    "webpack-bundle-analyzer": "^2.3.1",
    "ws": "^3.0.0",
    "xmlhttprequest": "^1.8.0"
  },
  "lint-staged": {
    "src/**/*.js": ["eslint --no-ignore --fix", "git add"],
    "tests/**/*.js": ["eslint --no-ignore --fix", "git add"],
    "src/**/*.json": ["prettier --write", "git add"],
    "tests/**/*.json": ["prettier --write", "git add"]
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "clean": "rimraf es lib dist coverage",
    "lint": "eslint src/** tests/**",
    "lint:fix": "npm run lint -- --fix",
    "test":
      "mocha -R spec ./tests/setup.js ./tests/** --recursive --require babel-register",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd":
      "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack src/index.js dist/altair-redux.js",
    "build:umd:min":
      "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack src/index.js dist/altair-redux.min.js",
    "build:size":
      "cross-env SIZE=true BABEL_ENV=commonjs NODE_ENV=production webpack src/index.js dist/altair-redux.min.js",
    "build:docs": "esdoc",
    "build":
      "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min && npm run build:docs",
    "watch": "npm run build:es -- --watch",
    "prepare": "npm run clean && npm run build"
  }
}
